{
  "manifest_version": 3,
  "name": "HRM Daily Task Auto",
  "version": "1.1.0",
  "description": "Tự động điền báo cáo công việc hằng ngày",
  "permissions": ["storage", "scripting", "tabs", "alarms"],
  "host_permissions": ["https://hrm.donga.edu.vn/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
